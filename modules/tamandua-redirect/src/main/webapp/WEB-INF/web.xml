<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Tamandua Redirect</display-name>  
	<servlet>
		<servlet-name>PageRedirectServlet</servlet-name>
		<servlet-class>br.com.tamandua.redirect.PageRedirectServlet</servlet-class>
		<load-on-startup>20</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>PageRedirectServlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PageRedirectServlet</servlet-name>
		<url-pattern>*.inc</url-pattern>
	</servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageRedirectServlet</servlet-name>
        <url-pattern>/busca</url-pattern>
    </servlet-mapping>
</web-app>
