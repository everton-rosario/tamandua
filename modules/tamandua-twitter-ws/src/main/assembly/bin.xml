<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!--  Configurations -->
		<fileSet>
			<directory>
				target/
			</directory>
			<outputDirectory>
				/opt/${artifactId}/lib
			</outputDirectory>
			<includes>
				<include>media-stat.jar</include>
			</includes>
		</fileSet>
                <fileSet>
			<directory>
				src/main/resources/
			</directory>
			<outputDirectory>
				/opt/${artifactId}/scripts
			</outputDirectory>
			<includes>
				<include>${artifactId}.sh</include>
			</includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
		</fileSet>
                <fileSet>
			<directory>
				src/main/resources/
			</directory>
			<outputDirectory>
				/opt/${artifactId}/config
			</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
	</fileSets>
        <dependencySets>
            <dependencySet>
                <outputDirectory>/opt/${artifactId}/lib</outputDirectory>
            </dependencySet>
        </dependencySets>
</assembly>